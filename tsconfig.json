{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@posh/navbar": ["libs/navbar/src/index.ts"],
      "@posh/hero": ["libs/hero/src/index.ts"],
      "@posh/home-page": ["libs/home-page/src/index.ts"],
      "@posh/section-header": ["libs/section-header/src/index.ts"],
      "@posh/pill": ["libs/pill/src/index.ts"],
      "@posh/search-page": ["libs/search-page/src/index.ts"],
      "@posh/section-subheader": ["libs/section-subheader/src/index.ts"],
      "@posh/popular-brand": ["libs/popular-brand/src/index.ts"],
      "@posh/trending-brand": ["libs/trending-brand/src/index.ts"],
      "@posh/popular-style": ["libs/popular-style/src/index.ts"],
      "@posh/footer": ["libs/footer/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
